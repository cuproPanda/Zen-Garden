<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ZenGarden.PatchOperationModDependent">
				<modName>Architect Sense</modName>
			</li>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/TerrainDef[@Name="ZEN_RoughBase"]</xpath>
				<order>Prepend</order>
				<value>
					<ArchitectSense.DesignationSubCategoryDef Name="AS_ZEN_Rough">
						<defName>SubCategory_ZenGardenRough</defName>
						<label>Rough gravel</label>
						<description>Rough gravel flooring made for paths. The gravel is too large to be raked.</description>
						<defNames>
							<li>ZEN_GravelRoughSandstone</li>
							<li>ZEN_GravelRoughGranite</li>
							<li>ZEN_GravelRoughLimestone</li>
							<li>ZEN_GravelRoughSlate</li>
							<li>ZEN_GravelRoughMarble</li>
						</defNames>
						<designationCategory>ZEN_Decoration</designationCategory>
						<preview>false</preview>
					</ArchitectSense.DesignationSubCategoryDef>
				</value>
			</li>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/TerrainDef[@Name="ZEN_RoughBase"]</xpath>
				<order>Prepend</order>
				<value>
					<ArchitectSense.DesignationSubCategoryDef Name="AS_ZEN_Normal">
						<defName>SubCategory_ZenGardenNormal</defName>
						<label>Unraked gravel</label>
						<description>Gravel flooring made from small polished stones. Can be raked into various patterns. Slower to build, but is beautiful to look at.</description>
						<defNames>
							<li>ZEN_GravelNormalSandstone</li>
							<li>ZEN_GravelNormalGranite</li>
							<li>ZEN_GravelNormalLimestone</li>
							<li>ZEN_GravelNormalSlate</li>
							<li>ZEN_GravelNormalMarble</li>
							<li>ZEN_GravelNormalJade</li>
						</defNames>
						<designationCategory>ZEN_Decoration</designationCategory>
						<preview>false</preview>
					</ArchitectSense.DesignationSubCategoryDef>
				</value>
			</li>
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ZenGarden.PatchOperationModDependent">
				<modList>
					<li>Architect Sense</li>
					<li>Cupro's Stones</li>
				</modList>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/TerrainDef[@Name="AS_ZEN_Rough"]/defNames</xpath>
				<value>
					<li>ZEN_GravelRoughClaystone</li>
					<li>ZEN_GravelRoughAndesite</li>
					<li>ZEN_GravelRoughSyenite</li>
					<li>ZEN_GravelRoughGneiss</li>
					<li>ZEN_GravelRoughQuartzite</li>
					<li>ZEN_GravelRoughSchist</li>
					<li>ZEN_GravelRoughGabbro</li>
					<li>ZEN_GravelRoughDiorite</li>
					<li>ZEN_GravelRoughDunite</li>
					<li>ZEN_GravelRoughPegmatite</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/TerrainDef[@Name="AS_ZEN_Normal"]/defNames</xpath>
				<value>
					<li>ZEN_GravelNormalClaystone</li>
					<li>ZEN_GravelNormalAndesite</li>
